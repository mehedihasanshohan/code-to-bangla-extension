{
  "manifest_version": 3,
  "name": "Code to Bangla",
  "version": "1.0",
  "description": "Hover on JS code, see Bangla explanations!",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["explain.js", "content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
